# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# ======================
# Application
# ======================
NODE_ENV=production
PORT=3000
API_VERSION=0.1.1

# ======================
# MongoDB Atlas
# ======================
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGO_DB_NAME=thesis_management

# ======================
# JWT Authentication
# ======================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-change-this-immediately
JWT_TOKEN_AUDIENCE=thesis-app
JWT_TOKEN_ISSUER=thesis-api
JWT_ACCESS_TOKEN_TTL=3600
JWT_REFRESH_TOKEN_TTL=86400

# ======================
# Redis Cache (Optional - use cloud Redis or ElastiCache)
# ======================
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_TTL=900
REDIS_PASSWORD=your-redis-password

# ======================
# Email Service (Gmail or SMTP)
# ======================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# ======================
# MinIO Object Storage
# ======================
MINIO_ENDPOINT=your-minio-server.com
MINIO_PORT=9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_USE_SSL=true
MINIO_BUCKET_NAME=thesis-files
MINIO_DOWNLOAD_URL_BASE=https://your-minio-server.com/thesis-files

# ======================
# AI/ML Services
# ======================
GEMINI_API_KEY=your-google-gemini-api-key
GROQ_API_KEY=your-groq-api-key (optional)
VOYAGE_API_KEY=your-voyage-ai-api-key (optional)

# ======================
# Frontend URL (for CORS)
# ======================
CLIENT_URL=https://yourdomain.com

# ======================
# API Profile Key (Optional)
# ======================
PROFILE_API_KEY=optional-api-key-for-profiling
